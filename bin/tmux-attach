#!/usr/bin/env bash

debug_on=true

debug() {
  if [[ "$debug_on" != "true" ]]; then
    return
  fi
  local k=$1
  local v=$2
  if [[ -n $v ]]; then
    echo "[debug] $k = $v"
  else
    echo "[debug] $k"
  fi
}

get_session_name() {
  if [[ -z $1 ]]; then
    echo "error-in-session-name"
    exit -1
  fi
  echo "$1"
}

switch_client() {
  debug "using switch-client"
  tmux switch-client -t $name
}

attach_session() {
  debug "using attach-session"
  tmux attach-session -t $name
}

main() {
  local name=${1:-null}
  local is_nested=$(tmux-is-nested)
  debug name $name
  debug is_nested $is_nested
  if [ $name == "null" ]; then
    debug aborting
    return
  elif [ "$is_nested" == "true" ]; then
    switch_client
  else
    attach_session
  fi
}

main "$@"
