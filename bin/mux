#!/usr/bin/env bash

set -e

main() {
  local v1="$1"
  if [ -z "$v1" ]; then
    mux_at
  elif [ "$v1" = "new" ]; then
    mux_new
  elif [ "$v1" = "create" ]; then
    mux_create
  elif [ "$v1" = "ex" ]; then
    mux_ex
  else
    _mux_start $v1
  fi
}

mux_ex() {
  local example=$nex_tmux_path/src/mux/example.sh
  vi $example
}

mux_at() {
  local out=$(tmux-is-running)
  if [ $out == "true" ]; then
    tmux at
  else 
    _mux_start "home"
  fi
}

mux_new() {
  local name=`tmux-new-session-name`
  tmux new-session -d -s $name -n "main"
  tmux attach-session -t $name:1
}

mux_create() {
 vi $nex_tmux_path/src/mux/example.sh
}

main "$@"
